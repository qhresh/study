<?php
$arrComp = array("SINA", "BIDU", "MSFT", "dx_company", "AAPL");	// 要查看的四家公司的股票代码

foreach($arrComp as $comp)
{
	$url = sprintf("http://quote.yahoo.com/d/quotes.csv?s=%s&f=nl1", $comp);
	
	$fp = @fopen($url, "r") or die ("This URL （" . $url . "） cannot access！\r\n");
	
	$read = fgetcsv($fp);
	
	fclose($fp);
	
	if(strcasecmp($read[0], $comp) != 0)
	{
		printf("%s 的最新股价为 $%s\r\n", $read[0], $read[1]);
	}
	else
	{
		printf("此股票代码有误：%s\r\n", $comp);
	}
}

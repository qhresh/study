<?php
getTemperature('Guangzhou');
getTemperature('Shanghai');
getTemperature('Beijing');

function getTemperature($city)
{
	$xml = simplexml_load_file("http://api.openweathermap.org/data/2.5/weather?q=" . $city . "&mode=xml");
	echo "The temperature of " . $xml->city["name"] . " is now " . f2c($xml->temperature["value"]) . " degree!\n";
}

// 开尔文转摄氏度
function f2c($kelvin)
{
    return $kelvin - 273.15;
}

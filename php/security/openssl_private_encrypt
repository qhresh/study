-----END PUBLIC KEY-----';

$piKey = openssl_pkey_get_private($privateKey);						// Get a private key;
$puKey = openssl_pkey_get_public($publicKey);						// Extract public key from certificate and prepare it for use

$data = "abcdefg";													// 原始数据
echo "source data: $data" . PHP_EOL . PHP_EOL;
$encrypted = "";													// 加密后的数据
$decrypted = "";

// 私钥加密，共钥解密
openssl_private_encrypt($data, $encrypted, $piKey);					// Encrypts data with private key
$encrypted = base64_encode($encrypted);								// 加密后的内容通常含有特殊字符，需要编码转换下
$encrypted = urlencode($encrypted);									// 编码 URL 字符串
echo "encrypted data: $encrypted" . PHP_EOL . PHP_EOL;

$encrypted = urldecode($encrypted);
$encrypted = base64_decode($encrypted);
openssl_public_decrypt($encrypted, $decrypted, $puKey);				// Decrypts data with public key
echo "decrypted data: $decrypted" . PHP_EOL . PHP_EOL;


// 共钥加密，私钥解密
openssl_public_encrypt($data, $encrypted, $puKey);
$encrypted = base64_encode($encrypted);
$encrypted = urlencode($encrypted);
echo "encrypted data: $encrypted" . PHP_EOL . PHP_EOL;

$encrypted = urldecode($encrypted);
$encrypted = base64_decode($encrypted);
openssl_private_decrypt($encrypted, $decrypted, $piKey);
echo "decrypted data: $decrypted" . PHP_EOL;
